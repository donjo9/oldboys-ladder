type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    updatedAt: DateTime! @updatedAt 
    createdAt: DateTime! @createdAt
    team: TeamRelation @relation(name: "UserToTeam", onDelete: CASCADE)
}

type TeamRelation {
    id: ID! @id
    player: User! @relation(name: "UserToTeam", onDelete: SET_NULL, link: TABLE)
    team: Team! @relation(name: "TeamToUser", onDelete: SET_NULL, link: TABLE)
    role: TeamRole!
}

type Team {
    id: ID! @id
    name: String!
    shortname: String!
    updatedAt: DateTime! @updatedAt 
    createdAt: DateTime! @createdAt
    players: [TeamRelation!]! @relation (name: "TeamToUser", onDelete: CASCADE)
}

enum TeamRole {
    OWNER
    ADMIN
    PLAYER
}